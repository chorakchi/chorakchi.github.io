{
	"version": "0.1.0",
	"command": "${workspaceRoot}/node_modules/.bin/webpack",
	"isShellCommand": true,
	"args": [
		"--display-modules",
		"--progress"
	],
	"echoCommand": true,
	"tasks": [
		{
			"args": [
				"-d" 
			],
			"suppressTaskName": true,
			"taskName": "webpack dev server",
			"isBuildCommand": true
		},
		{
			"args": [
				"-p"
			],
			"suppressTaskName": true,
			"taskName": "webpack dist",
			"isBuildCommand": false
		}
	]
}